{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RuleHub Backstage Plugin Index",
  "description": "Schema for dist/index.json consumed by the RuleHub Backstage plugin. Only the 'packages' array is required; extra top-level fields are allowed.",
  "type": "object",
  "required": ["packages"],
  "properties": {
    "packages": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "name": { "type": "string", "minLength": 1 },
          "standard": { "type": "string" },
          "version": { "type": "string" },
          "jurisdiction": {
            "oneOf": [{ "type": "string" }, { "type": "array", "items": { "type": "string" } }]
          },
          "industry": {
            "oneOf": [{ "type": "string" }, { "type": "array", "items": { "type": "string" } }]
          },
          "coverage": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
